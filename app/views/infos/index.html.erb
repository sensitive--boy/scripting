<h1>Listing infos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Function</th>
    <th>Addition</th>
    <th>Szene</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @infos.each do |info| %>
  <tr>
    <td><%= info.name %></td>
    <td><%= info.function %></td>
    <td><%= info.addition %></td>
    <td><%= info.szene %></td>
    <td><%= link_to 'Show', info %></td>
    <td><%= link_to 'Edit', edit_info_path(info) %></td>
    <td><%= link_to 'Destroy', info, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

